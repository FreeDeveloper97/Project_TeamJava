                android:layout_height="80dp"
                android:max="100"
                android:progress="32"
                />
            <ProgressBar
                android:id="@+id/Progress_7"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:rotation="270"
                android:layout_gravity="center"
                android:layout_width="44dp"
                android:layout_height="80dp"
                android:max="100"
                android:progress="32"
                />
            <ProgressBar
                android:id="@+id/Progress_8"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:rotation="270"
                android:layout_gravity="center"
                android:layout_width="44dp"
